<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyyMMdd'T'HHmmss.SSSZ} %5level %msg %ex{full} [%class.%method\(\) @ %line]%n</pattern>
        </encoder>
    </appender>
    <logger name="com.king" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="console"/>
    </root>
</configuration>
